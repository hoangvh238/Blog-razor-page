@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "Chỉ mục";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="ibox">
                    <div class="ibox-content product-box">
                        <div class="product-imitation">
                            <img src="@item.BlogImage" class="img-fluid" alt="Blog Image"/>
                        </div>
                        <div class="product-desc">
                            <span class="product-price">
                                @(((DateTime)item.BlogCreatedAt).ToString("dd-MMM-yyyy"))
                            </span>
                            <small class="text-muted">@item.Category.CategoryName</small>
                            <a href="/Blog/BlogReadAll/@item.BlogID/" class="product-name"> @item.BlogTitle</a>
                            <div class="m-t text-right">
                                @{
                                    if (item.BlogStatus)
                                    {
                                        <a href="/Blog/BlogReadAll/@item.BlogID/" class="btn btn-xs btn-outline btn-primary">Chi tiết <i class="fa fa-long-arrow-right"></i> </a>
                                    }
                                    else
                                    {
                                        <a href="#" class="btn btn-xs btn-outline btn-default">Blog bị ẩn <i class="fa fa-close"></i> </a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .wrapper {
        padding: 20px;
    }

    .ibox {
        margin-bottom: 20px;
        border: 1px solid #e7eaec;
        background-color: #fff;
        transition: transform 0.3s, box-shadow 0.3s;
        border-radius: 5px;
    }

    .ibox:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .ibox-content {
        padding: 15px;
    }

    .product-box {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }

    .product-imitation {
        height: 200px;
        overflow: hidden;
        border-bottom: 1px solid #e7eaec;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
    }

    .product-imitation img {
        width: 100%;
        height: auto;
        display: block;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-imitation:hover img {
        transform: scale(1.05);
    }

    .product-desc {
        padding: 15px;
    }

    .product-price {
        font-size: 18px;
        font-weight: 700;
        color: #1ab394;
    }

    .text-muted {
        display: block;
        margin-bottom: 10px;
    }

    .product-name {
        font-size: 16px;
        font-weight: 600;
        color: #676a6c;
        margin-bottom: 10px;
        display: block;
        text-decoration: none;
        transition: color 0.3s;
    }

    .product-name:hover {
        color: #1ab394;
    }

    .m-t {
        margin-top: 10px;
    }

    .btn-outline {
        border: 1px solid #1ab394;
        color: #1ab394;
        background-color: transparent;
        transition: all 0.3s;
    }

    .btn-outline:hover {
        background-color: #1ab394;
        color: #fff;
    }

    .btn-outline.btn-default {
        border-color: #d7d7d7;
        color: #d7d7d7;
    }

    .btn-outline.btn-default:hover {
        background-color: #d7d7d7;
        color: #fff;
    }

    .fa {
        margin-left: 5px;
    }
</style>
