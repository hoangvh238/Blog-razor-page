@model List<RoleAssignViewModel>

@{
    ViewData["Title"] = "Assign Roles";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" class="form-check-input" />
            <input type="hidden" asp-for="@Model[i].Name" class="form-check-input" />
            <input type="checkbox" asp-for="@Model[i].Exist" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].Exist">@Model[i].Name</label>
        </div>
    }
    <br />
    <a href="/Admin/Role/UserRoleList/" class="btn btn-info">Quay lại danh sách</a>
    <button class="btn btn-primary">Lưu</button>
</form>
