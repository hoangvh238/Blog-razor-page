@using Core.Areas.Admin.Models
@model RoleViewModel

@{
    ViewData["Title"] = "Thêm Vai Trò";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h1>Thêm Vai Trò</h1>
<br />
<form method="post">
    <div class="form-group">
        <input type="text" class="form-control" name="Name" placeholder="Nhập Tên Vai Trò">
        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary block m-b" style="width:150px">THÊM</button>
    </div>
</form>
