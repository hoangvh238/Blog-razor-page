@model Core.ViewModel.ForgotPass
@{
    ViewData["Title"] = "ResetPass";
	
	Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Quên mật khẩu</h3>
		<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				<form method="post" asp-action="ResetPass">
					<div class="form-group">
						<label for="exampleInputEmail1 mb-2" style="font-size: 20px;">Nhập mật khẩu mới</label>
						<input type="password" class="form-control" asp-for="@Model.Password" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Nhập mật khẩu...">
						<input type="hidden" asp-for="UserId"/>
						<input type="hidden" asp-for="Token" />
						<span asp-validation-for="@Model.Password" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label for="exampleInputEmail1 mb-2" style="font-size: 20px;">Nhập lại mật khẩu</label>
						<input type="password" class="form-control" asp-for="@Model.ConfirmPassword" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Nhập lại mật khẩu...">
						<span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
					</div>

					<button type="submit" class="btn btn-primary submit mb-4">Gửi</button>
					<p><a href="/Register/Index/"> Bạn chưa có tài khoản?</a></p>
				</form>
			</div>
		</div>
	</div>
</section>
