@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "Blog list by Writer";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Blog của bạn</h1>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th><h5>ID</h5></th>
                <th><h5>Tiêu đề Blog</h5></th>
                <th><h5>Ngày tạo</h5></th>
                <th><h5>Danh mục</h5></th>
                <th><h5>Trạng thái</h5></th>
                <th><h5></h5></th>
                <th><h5></h5></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><h4>@item.BlogID</h4></td>
                    <td>@item.BlogTitle</td>
                    <td>@item.BlogCreatedAt</td>
                    <td>@item.Category.CategoryName</td>
                    <td>
                        @{
                            if (item.BlogStatus)
                            {
                                <span class="badge badge-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge badge-dark">Không hoạt động</span>
                            }
                        }
                    </td>
                    <td>
                        <button class="btn btn-danger" style="width:60px; padding: 8px 10px; font-size: 14px; text-align: center;"
                                onclick="confirmDelete('@item.BlogID')">
                            Xóa
                        </button>
                    </td>
                    <td><a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning" style="padding: 8px 10px; font-size: 14px; text-align: center;">Chỉnh sửa</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<div class="d-flex justify-content-center">
    <a href="/Blog/BlogAdd/" class="btn btn-inverse-primary">Tạo Blog mới</a>
</div>
<script>
    function confirmDelete(blogId) {
        Swal.fire({
            title: 'Xóa?',
            text: 'Bạn có chắc chắn muốn xóa blog này không?',
            showDenyButton: true,
            confirmButtonText: 'Có',
            denyButtonText: 'Không',
            customClass: {
                actions: 'my-actions',
                cancelButton: 'order-1 right-gap',
                confirmButton: 'order-2',
                denyButton: 'order-3',
            },
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/Blog/DeleteBlog/' + blogId;
            }
        })
    }
</script>
<style>
    .table thead th {
        border-bottom: 1px solid #dee2e6;
    }

    .table tbody tr:first-child {
        border-top: none;
    }

    .table tbody tr:last-child {
        border-bottom: 1px solid #dee2e6;
    }
</style>
