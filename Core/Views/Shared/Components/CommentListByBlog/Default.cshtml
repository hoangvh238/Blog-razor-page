@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
	@if (Model.Count() == 0)
	{
		<h6>Hãy là người đầu tiên bình luận...</h6>
	}
	else
	{
		<h4>Bình Luận</h4>
	}
	@foreach (var item in Model)
	{
		<div class="media">

			<img width="90" src="@item.Image" alt="" class="img-fluid" />
			<div class="media-body">
				<h5 class="mt-0">@item.CommentUserName</h5>
				<p>
					@item.CommentContent
				</p>
			</div>
		</div>
		<br />
	}
</div>
